@model List<Ponche_Adess.Domain.Data.Models.ResumenAsistenciaMensual>

@{
    ViewData["Title"] = "Resumen Mensual de Asistencia";
    string nombreMes = new System.Globalization.CultureInfo("es-ES").DateTimeFormat.GetMonthName(Model.FirstOrDefault()?.Mes ?? 0);
    int anio = Model.FirstOrDefault()?.Anio ?? 0;
}

<h2>Resumen de Asistencia - @nombreMes @anio</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Empleado</th>
                <th>Sección</th>
                <th>Días Totales</th>
                <th>Días Tarde</th>
                <th>Min. Tarde</th>
                <th>Días Anticipados</th>
                <th>Min. Anticipados</th>
                <th>Horas Trabajadas</th>
                <th>% Cumplimiento</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.Empleado))
            {
                <tr>
                    <td>@item.Empleado</td>
                    <td>@item.Seccion</td>
                    <td>@item.DiasTotales</td>
                    <td>@item.DiasTarde</td>
                    <td>@item.MinTarde</td>
                    <td>@item.DiasAnticipados</td>
                    <td>@item.MinAnticipados</td>
                    <td>@item.HorasTrabajadas.ToString("F2")</td>
                    <td>@item.PorcCumplimiento.ToString("F2")%</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        No hay datos de asistencia para este mes.
    </div>
}
