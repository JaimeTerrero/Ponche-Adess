@{
    ViewData["Title"] = "Carga de Ponches";
}

<h2>Carga de Archivo de Ponches (.xlsb)</h2>

<form asp-action="ProcesarArchivo" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="archivo">Selecciona el archivo:</label>
        <input type="file" name="archivo" accept=".xlsx" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Procesar</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Error
    </div>
}
